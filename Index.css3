/* Styles for the "I miss you" section */
.miss-you-section {
    font-size: 1.5rem;
    color: #ff007f;
    text-align: center;
    margin-top: 40px;
    animation: fadeIn 2s ease-in-out;
}

/* Container for the animated hearts */
.miss-you-section::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}

/* The code below creates the animated hearts effect */
/* We'll use a pseudo-element on the body to create the hearts */
body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    background-image: radial-gradient(circle, #ff007f 1px, transparent 1px);
    background-size: 50px 50px;
    animation: heartbeat-fall 10s linear infinite;
    opacity: 0.1;
}

@keyframes heartbeat-fall {
    from {
        background-position: 0 0;
    }
    to {
        background-position: 0 100%;
    }
}
